@model MvcApplication16.Models.QPage
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm()) 
{ 
    
  @Html.HiddenFor(modelItem => Model.CountPages)  
  @Html.HiddenFor(modelItem => Model.TestId)    
  @Html.HiddenFor(modelItem => Model.ItemsOnPage)
  @Html.HiddenFor(modelItem => Model.CurrentPage) 
        
    
    @Html.Partial("_ShowQuestions")
    
    @Html.HiddenFor(CurrentPage => Model.CurrentPage)
    if (Model.CurrentPage == Model.CountPages)
    {<input type="submit" name="Next" value="Done" />}
    else
    { <input type="submit" name="Next" value="Next" />}
}

    
@for (int i = 0; i < Model.CountPages; i++)
{
    if (i != Model.CurrentPage-1)
    { @Html.ActionLink((i + 1).ToString(), "Index", new { id = i + 1 }, null)}
    else
    {  @Html.ActionLink( "|"+(i + 1).ToString()+"|" , "Index", new { id = i + 1 }, null)}
}


